// @flow

import * as React from 'react';
import type { StyletronComponent } from '../styles/styled';
import {
  type HeadCellPropsT,
  StyledCell as FlexStyledBodyCell,
  StyledHeadCell as FlexStyledHeadCell,
  StyledTable as FlexStyledTable,
} from '../table';

export { SORT_DIRECTION } from '../table';

declare export var SortableHeadCell: React.StatelessFunctionalComponent<HeadCellPropsT>;

type ExtractPropTypes = <T>(StyletronComponent<T>) => T;

declare export var StyledTable: StyletronComponent<
  $Call<ExtractPropTypes, typeof FlexStyledTable> & { $gridTemplateColumns: string }
>;
declare export var StyledHeadCell: StyletronComponent<
  $Call<ExtractPropTypes, typeof FlexStyledHeadCell> & {
    $sticky?: boolean,
    $isFocusVisible?: boolean,
  }
>;
declare export var StyledBodyCell: StyletronComponent<
  $Call<ExtractPropTypes, typeof FlexStyledBodyCell> & {
    $gridColumn?: string,
    $gridRow?: string,
    $isFocusVisible?: boolean,
  }
>;
